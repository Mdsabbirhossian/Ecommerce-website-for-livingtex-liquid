<script async src="https://www.googletagmanager.com/gtag/js?id=AW-746254122"></script>
<script>
 window.dataLayer = window.dataLayer || [];
 function gtag(){dataLayer.push(arguments);}
 gtag('js', new Date());<!-- Event snippet for dynamic remarketing -->gtag('config', 'AW-746254122');
